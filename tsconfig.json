{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "incremental": true,

    "paths": {
      "@/*": ["./*"],
      "payload-config": ["./payload.config.ts"]
    },
    "target": "es2022",
    "outDir": "./dist"
  },

  "include": ["./**/*.ts", "payload.config.ts"],
  "exclude": ["node_modules", "dist"]
}
